{
  "name": "base-npm-package-example",
  "version": "1.0.0",
  "description": "A base npm package example",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn clean && yarn lint",
    "build": "yarn tsc",
    "start": "yarn build && node -r tsconfig-paths/register dist/index.js",
    "clean": "rm -rf dist",
    "check-types": "tsc --noemit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json --max-warnings 0 && yarn check-types"
  },
  "author": "Peersyst",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
