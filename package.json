{
  "name": "base-npm-package",
  "version": "1.0.0",
  "description": "Base NPM package repository to build new packages with Typescript.",
  "main": "index.js",
  "scripts": {
    "prebuild": "yarn clean && yarn lint",
    "build": "yarn tsc",
    "clean": "rm -rf dist",
    "check-types": "tsc --noemit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.json --max-warnings 0 && yarn check-types",
    "test": "jest --maxWorkers=30%"
  },
  "author": "Peersyst",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
